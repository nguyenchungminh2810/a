@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}

<div class="ps-content pt-80 pb-80">
    <div class="ps-container">
        <div class="ps-cart-listing">
            <table class="table ps-cart__table">
                <thead>
                    <tr>
                        <th>Tất cả sản phẩm</th>
                        <th>Giá</th>
                        <th>Số Lượng</th>
                        <th>Thành tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a class="ps-product__preview" href="product-detail.html"><img style="width:100px" class="mr-15" src="~/images/giay/@item.sAnhBia" alt="@item.sTenSP"> @item.sTenSP</a></td>
                            <td>@string.Format("{0:0,000}", @item.iDonGia) Đ</td>
                            <td>
                                <div class="form-group--number">
                                    <button class="minus"><span>-</span></button>
                                    <input class="form-control" type="text" value="@item.iSoLuong">
                                    <button class="plus"><span>+</span></button>
                                </div>
                            </td>
                            <td>@string.Format("{0:0,000}", @item.iThanhTien) Đ</td>
                            <td>
                                <div class="ps-remove"></div>
                            </td>
                        </tr>
                    }
                    
                    
                </tbody>
            </table>
            <div class="ps-cart__actions">
                <div class="ps-cart__promotion">
                    <div class="form-group">
                        <div class="ps-form--icon">
                            <i class="fa fa-angle-right"></i>
                            <input class="form-control" type="text" placeholder="Nhập mã">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="ps-btn ps-btn--gray" type="button" onclick="location.href='@Url.Action("Index", "TrangChu")'">Tiếp tục mua sắm</button>
                    </div>
                </div>
                <div class="ps-cart__total">
                    <h3>Tổng tiền: <span style="margin-top: -2px; margin-left: 10px;"> @string.Format("{0:0,000}", ViewBag.TongTien) đ</span></h3><a class="ps-btn" href="@Url.Action("ThanhToan","GioHang")">Thanh Toán<i class="ps-icon-next"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>


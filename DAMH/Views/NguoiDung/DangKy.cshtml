@model DAMH.Models.khachhang
@{
    ViewBag.Title = "Sky - Đăng Ký";
    Layout = "~/Views/Shared/_LayoutDangKy.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="login100-more" style="background-image: url('../../images/3.jpg');"></div>

        <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50 ">
            @using (Html.BeginForm("DangKy","NguoiDung",FormMethod.Post,new {@class="login100-form validate-form" }))
            {

                    <span class="login100-form-title p-b-59">
                        Đăng Ký
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập họ tên">
                        <span class="label-input100">Họ Và Tên</span>
                        <input class="input100" type="text" name="tenkh" placeholder="Họ tên...">

                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập số điện thoại">
                        <span class="label-input100">Số điện thoại</span>
                        <input class="input100" type="number" name="sdtkh" placeholder="Số điện thoại...">
                        <span class="focus-input100"></span>
                       
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Email phải có dạng: ex@abc.xyz">
                        <span class="label-input100">Email</span>
                        <input class="input100" type="text" id="email" name="emailkh" placeholder="Email addess...">
                        <span class="focus-input100"></span>
                        <h5 style="color:red;border-radius: inherit;margin-top:10px ;">
                           
                            @ViewData["Loi1"]
                        </h5>

                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập ngày sinh">
                        <span class="label-input100">Ngày Sinh</span>
                        <input class="input100" type="date" name="ngaysinh" placeholder="Username...">
                        <span class="focus-input100"></span>
                        
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập địa chỉ">
                        <span class="label-input100">Địa Chỉ</span>
                        <input class="input100" type="text" name="diachikh" placeholder="Địa chỉ...">
                        <span class="focus-input100"></span>
                        
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập tên tài khoản">
                        <span class="label-input100">Tên Tài Khoản</span>
                        <input class="input100" type="text" name="tentkkh" placeholder="Tên tài khoản...">
                        <span class="focus-input100"></span>
                        <h5 style="color:red;border-radius: inherit;margin-top:10px ;" class="text-danger">
                            @ViewData["Loi2"]
                        </h5>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập mật khẩu">
                        <span class="label-input100">Mật Khẩu</span>
                        <input class="input100" type="password" name="matkhau" placeholder="*********">
                        <span class="focus-input100"></span>
                        
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Chưa nhập lại mật khẩu">
                        <span class="label-input100">Nhập Lại Mật Khẩu</span>
                        <input class="input100" type="password" name="matkhaukh" placeholder="*********">
                        <span class="focus-input100"></span>
                        
                    </div>





                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" onclick="checkEmail()">
                                Đăng Ký
                            </button>
                        </div>

                        
                    </div>

                
            }
        </div>
    </div>
</div>
